@startuml object_dependency_graph

skinparam {
	defaultFontName Fira Sans

	ArrowColor #black
	ComponentBorderColor #333
	ComponentBorderThickness 1
}

note left of [Window]
	<color 66FF98>Green</color> = done
	<color 66CDFF>Blue</color> = in-progress
	<color FF6680>Red</color> = planned
end note

component [Instance] <<Vrc>> #66FF98
component [Window] #66FF98

component [PhysicalDevice] #66FF98
component [Surface] #66FF98

component [Device] <<Vrc>> #66FF98

component [Queue] <<Vrc>> #66FF98
component [Swapchain] <<Vrc>> #66FF98
component [SwapchainImage] <<Vrc>> #66FF98

component [Image] <<Vrc>> #66FF98
component [Buffer] <<Vrc>> #FF6680

component [ImageView] <<Vrc>> #66CDFF
component [BufferView] <<Vrc>> #FF6680

component [CommandPool] <<Vrc>> #66FF98
component [CommandBuffer] <<Vrc>> #66CDFF

component [RenderPass] <<Vrc>> #FF6680
component [FrameBuffer] <<Vrc>> #FF6680
component [ComputePipeline] <<Vrc>> #FF6680
component [GraphicsPipeline] <<Vrc>> #FF6680

component [DescriptorSetLayout] <<Vrc>> #FF6680
component [PipelineLayout] <<Vrc>> #FF6680

component [DescriptorPool] <<Vrc>> #FF6680
component [DescriptorSet] <<Vrc>> #FF6680

component [Semaphore] <<Vrc>> #66FF98
component [Fence] <<Vrc>> #66FF98

[Instance] <-- [PhysicalDevice]
[Instance] <-- [Surface]

[Window] <-- [Surface]
[PhysicalDevice] <-- [Device]
[Surface] <-- [Swapchain] : <<Vrc>>

[Device] <- [Queue]
[Swapchain] -> [Device]
[Device] <-- [Image]
[Device] <-- [Buffer]
[Device] <-- [CommandPool]
[Device] <-- [RenderPass]
[Device] <-- [DescriptorSetLayout]
[Device] <-- [DescriptorPool]
[Device] <- [Semaphore]
[Device] <- [Fence]

[Swapchain] <-- [SwapchainImage]

[Image] <.. [SwapchainImage] : Inlined
[Image] <-- [ImageView]
[Buffer] <-- [BufferView]

[CommandPool] <-- [CommandBuffer]

[RenderPass] <.. [FrameBuffer]
[DescriptorSetLayout] <.. [DescriptorSet] : Copy?
[DescriptorSetLayout] <.. [PipelineLayout] : Copy? + Device
[PipelineLayout] <.. [ComputePipeline] : Copy?
[PipelineLayout] <.. [GraphicsPipeline] : Copy?
[DescriptorPool] <-- [DescriptorSet]

@enduml
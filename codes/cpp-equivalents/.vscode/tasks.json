{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clang",
			"type": "shell",
			"group": "build",
			"command": "clang++ --std=c++11 ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.cppapp; ./${relativeFileDirname}/${fileBasenameNoExtension}.cppapp",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Rustc",
			"type": "shell",
			"group": "build",
			"command": "rustc ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.rsapp; ./${relativeFileDirname}/${fileBasenameNoExtension}.rsapp",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}
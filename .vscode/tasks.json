{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run gen.sh",
			"type": "shell",
			"group": "build",
			"command": "scripts/gen.sh ${fileBasenameNoExtension}",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Generate thesis",
			"type": "shell",
			"group": "build",
			"command": "scripts/generate.sh",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Generate defense",
			"type": "shell",
			"group": "build",
			"command": "scripts/generate_defense.sh",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Count words",
			"type": "shell",
			"group": "build",
			"command": "scripts/include_filter.py 'documents/thesis.md' | scripts/word_count.py",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run puml",
			"type": "shell",
			"group": "build",
			"command": "puml -tsvg ${relativeFile}",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Spec extractor",
			"type": "shell",
			"group": "build",
			"command": "scripts/spec_extractor.py assets/spec_validations.json assets/vkspec.html documents/progress/validations",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}